{
  "private": true,
  "name": "kinvey-angular2-sdk",
  "version": "3.8.1",
  "description": "Kinvey JavaScript SDK for Angular2 applications.",
  "homepage": "http://www.kinvey.com",
  "keywords": [
    "Kinvey",
    "JavaScript",
    "Angular2"
  ],
  "bugs": {
    "url": "http://support.kinvey.com"
  },
  "license": "Apache-2.0",
  "author": "Kinvey, Inc.",
  "contributors": [
    "Thomas Conner <thomas@kinvey.com>"
  ],
  "main": "kinvey-angular2-sdk.umd.js",
  "typings": "kinvey-angular2-sdk.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:Kinvey/angular2-sdk"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run build:umd",
    "postbuild": "node scripts/copy-files.js",
    "build:umd": "webpack --config webpack.config.ts",
    "build:umd:watch": "npm run build:umd -- --watch",
    "prebuild:watch": "rimraf dist",
    "build:watch": "concurrently --raw \"npm run build:umd:watch\"",
    "ci": "npm run lint && npm run test",
    "clean:all": "npm run clean && rimraf node_modules",
    "clean": "rimraf dist",
    "explorer": "source-map-explorer ./dist/kinvey-angular2-sdk.umd.js",
    "lint": "npm run tslint 'src/**/*.ts'",
    "tslint": "tslint --exclude src/kinvey.d.ts",
    "preversion": "npm run clean:all && npm i && npm test",
    "postversion": "git push && git push --tags",
    "test": "mocha -r ts-node/register -s 100 --recursive test/unit/**/*.test.ts",
    "test:watch": "mocha -w -r ts-node/register -s 100 --recursive test/unit"
  },
  "devDependencies": {
    "@types/jasmine": "^2.5.47",
    "@types/karma": "^0.13.35",
    "@types/node": "^7.0.18",
    "@types/webpack": "^2.2.15",
    "@types/webpack-env": "^1.13.0",
    "awesome-typescript-loader": "^3.1.3",
    "codelyzer": "^3.0.1",
    "concurrently": "^3.4.0",
    "json-loader": "^0.5.4",
    "kinvey-phonegap-sdk": "3.9.0",
    "mocha": "3.5.3",
    "rimraf": "2.6.1",
    "source-map-explorer": "^1.3.3",
    "ts-node": "^3.0.4",
    "tslint": "^5.2.0",
    "tslint-config-airbnb": "5.3.0",
    "typescript": "^2.3.2",
    "webpack": "^2.5.1"
  }
}
