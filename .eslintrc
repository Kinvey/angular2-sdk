 {
  "extends": "airbnb",
  "parser": "babel-eslint",
  "rules": {
    "comma-dangle": "off",
    "func-names": "off",
    "id-length": "off",
    "max-len": [
      "warn",
      {
        "code": 120,
        "tabWidth": 2,
        "ignoreComments": true,
        "ignoreTrailingComments": true
      }
    ],
    "new-cap": [2, { "newIsCap": true, "capIsNew": false }],
    "no-console": "error",
    "no-loop-func": "warn",
    "no-param-reassign": "off",
    "no-shadow": "off",
    "no-underscore-dangle": "off",
    "object-shorthand": [
      "error",
      "methods"
    ],
    "space-before-function-paren": "off"
  },
  "ecmaFeatures": {
    "modules": true,
    "jsx": false
  },
  "env": {
    "browser": true,
    "es6": true
  }
}
